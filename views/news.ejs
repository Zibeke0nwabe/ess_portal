<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ESS Portal</title>

  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
  <style>
    @keyframes fadeIn {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fadeIn {
      animation: fadeIn 1s ease-in-out;
      opacity: 1 !important;
    }
  </style>
</head>
<body class="text-gray-800">

  <!-- Top Banner -->
  <div class="bg-[#000026] text-white text-sm px-4 py-2 flex justify-between items-center flex-wrap m-2">
    <span class="text-gray-200 whitespace-nowrap">
      Upcoming Test Series | Admissions Open | New Departments Launched | Explore Scholarships
    </span>

    <div class="flex items-center gap-6 whitespace-nowrap text-gray-200 text-xs mt-2 md:mt-0">
      <span class="flex items-center gap-1">
        <i class="fas fa-map-marker-alt text-white"></i>
        Luna Apartments, 477 Anton Lembede St
      </span>
      <span class="flex items-center gap-1">
        <i class="fas fa-phone-alt text-white"></i>
        +27 (72) 343-8377
      </span>
      <span class="flex items-center gap-1">
        <i class="fas fa-envelope text-white"></i>
        ekhayaSmartScholars@gmail.com
      </span>
    </div>
  </div>

  <!-- Navbar -->
  <nav class="bg-white text-gray-800 shadow-md">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center h-16">

        <!-- Logo -->
        <div class="flex items-center space-x-3">
          <img src="/images/Logo.png" alt="School Logo" class="h-16 w-auto" />
        </div>

        <!-- Links -->
        <div class="hidden md:flex space-x-6 items-center text-sm font-medium">
          <a href="/" class="hover:text-[#000026] transition">Home</a>
          <a href="/universities" class="hover:text-[#000026] transition">Universities</a> 
          <a href="/news" class="hover:text-[#000026] transition">ESS News</a>
          <a href="/bursaries" class="hover:text-[#000026] transition">Bursaries</a>
          <a href="/management" class="hover:text-[#000026] transition">Our Management</a>
          <a href="/live-classes" class="hover:text-[#000026] transition">Live Classes</a>
        </div>

        <!-- Search + Login -->
        <div class="hidden md:flex items-center space-x-4">
          <label for="search-desktop" class="sr-only">Search</label>
          <div class="relative">
            <input
              id="search-desktop"
              type="search"
              placeholder="Search..."
              class="pl-4 pr-10 py-2 text-sm border rounded-md focus:outline-none focus:ring-2 focus:ring-[#000026]"
            />
            <svg class="w-4 h-4 absolute right-3 top-2.5 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M21 21l-4.35-4.35M17 11a6 6 0 11-12 0 6 6 0 0112 0z" />
            </svg>
          </div>
          <a href="/login" class="text-sm font-medium px-4 py-2 bg-[#000026] text-white rounded-md hover:bg-[#1a1a4c] transition">
            <i class="fas fa-sign-in-alt mr-1"></i> Login
          </a>
        </div>

        <!-- Mobile Button -->
        <div class="md:hidden flex items-center">
          <button id="mobile-menu-button" aria-label="Toggle menu" aria-expanded="false" aria-controls="mobile-menu" class="focus:outline-none">
            <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Dropdown -->
    <div id="mobile-menu" class="hidden md:hidden px-4 py-4 bg-white border-t text-sm space-y-3" role="menu" aria-label="Mobile menu">
      <a href="/" class="block text-gray-700 hover:text-[#000026]" role="menuitem">Home</a>
      <a href="/universities" class="block text-gray-700 hover:text-[#000026]" role="menuitem">Universities</a>
      <a href="/news" class="block text-gray-700 hover:text-[#000026]" role="menuitem">ESS News</a>
      <a href="#" class="block text-gray-700 hover:text-[#000026]" role="menuitem">Events</a>
      <a href="#" class="block text-gray-700 hover:text-[#000026]" role="menuitem">Contact</a>
      <a href="/login" class="block text-gray-700 hover:text-[#000026]" role="menuitem">Login</a>
      <div class="relative mt-2">
        <label for="search-mobile" class="sr-only">Search</label>
        <input
          id="search-mobile"
          type="search"
          placeholder="Search..."
          class="w-full pl-4 pr-10 py-2 border rounded-md focus:ring-[#000026] focus:outline-none"
        />
        <svg class="w-4 h-4 absolute right-3 top-3 text-gray-500" fill="none" stroke="currentColor" stroke-width="2"
          viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M21 21l-4.35-4.35M17 11a6 6 0 11-12 0 6 6 0 0112 0z" />
        </svg>
      </div>
    </div>

    <script>
      const mobileBtn = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileBtn.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.toggle('hidden');
        mobileBtn.setAttribute('aria-expanded', !isHidden);
      });
    </script>
  </nav>
<section class="bg-[#000026] text-white min-h-[240px] flex flex-col justify-center items-center text-center px-4 m-3 rounded-md">
  <h1 class="text-4xl md:text-5xl font-bold mb-4">Stay Updated with ESS News</h1>
  <p class="text-lg max-w-xl">Latest news, announcements, and updates about South African universities, scholarships, and educational events.</p>
</section>

<!-- Main Section: Two-Column Layout -->
<section class="max-w-7xl mx-auto px-4 py-8 grid grid-cols-1 md:grid-cols-3 gap-8">
  <!-- Left Column (Articles) -->
  <div class="md:col-span-2 space-y-10">

  <!-- Article 1 -->
  <article class="border-b border-gray-200 pb-6">
    <h2 class="text-2xl font-semibold text-[#000026] mb-2">Admissions Open for 2026 Intake</h2>
    <p class="text-gray-700">Universities across South Africa are now accepting applications for the 2026 academic year. Find out which institutions have early admission deadlines.</p>
    <time datetime="2025-06-10" class="text-xs text-gray-500 mt-1 block">June 10, 2025</time>

    <!-- Reactions -->
    <div class="flex items-center gap-2 mt-4">
      <div class="flex -space-x-2 cursor-pointer" onclick="showLoginModal()">
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-thumbs-up text-blue-600"></i>
        </div>
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-heart text-red-600"></i>
        </div>
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-surprise text-yellow-500"></i>
        </div>
      </div>
      <button onclick="showBreakdown(1)" class="text-sm text-[#000026] font-medium underline">12 reactions</button>
    </div>
  </article>

  <!-- Article 2 -->
  <article class="border-b border-gray-200 pb-6">
    <h2 class="text-2xl font-semibold text-[#000026] mb-2">Scholarship Applications Extended</h2>
    <p class="text-gray-700">The Department of Higher Education has extended the deadline for national and provincial scholarships to July 15, 2025. Apply now while spots last.</p>
    <time datetime="2025-06-01" class="text-xs text-gray-500 mt-1 block">June 1, 2025</time>

    <!-- Reactions -->
    <div class="flex items-center gap-2 mt-4">
      <div class="flex -space-x-2 cursor-pointer" onclick="showLoginModal()">
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-thumbs-up text-blue-600"></i>
        </div>
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-heart text-red-600"></i>
        </div>
        <div class="bg-white rounded-full p-1 shadow">
          <i class="fas fa-surprise text-yellow-500"></i>
        </div>
      </div>
      <button onclick="showBreakdown(3)" class="text-sm text-[#000026] font-medium underline">15 reactions</button>
    </div>
  </article>
  </div>

  <!-- Right Column (Top Story Sidebar) -->
  <aside class="bg-white shadow-sm rounded-md overflow-hidden">
    <div class="p-4 border-b text-lg font-semibold bg-[#000026] text-white">Top Story</div>
    <div class="p-4">
      <img src="https://th.bing.com/th/id/OIP.J4CUht7YQTPWG2tiyGlawQHaEX?w=218&h=128&c=7&o=5&pid=1.20" alt="Top Story" class="rounded-md mb-3 w-full">
      <h3 class="text-lg font-bold text-[#000026] mb-2">Breaking: Government Announces New Bursary Scheme</h3>
      <p class="text-sm text-gray-700 mb-3">The Department of Education has announced a new funding initiative to support underprivileged students nationwide.</p>
      <button onclick="showLoginModal()" class="text-sm font-medium text-white bg-[#000026] px-4 py-2 rounded hover:bg-[#1a1a4c]">Read More</button>
    </div>
  </aside>
</section>

<!-- Reaction Breakdown Modal -->
<div id="reaction-breakdown-modal" class="fixed inset-0 hidden items-center justify-center z-50">
  <div class="modal-backdrop absolute inset-0" onclick="closeModal('reaction-breakdown-modal')"></div>
  <div class="bg-white p-6 rounded-md shadow-lg z-10 w-80 relative">
    <h3 class="text-xl font-bold mb-4 text-[#000026]">Reactions Breakdown</h3>
    <ul class="space-y-2 text-gray-700">
      <li><i class="fas fa-thumbs-up text-blue-600 mr-2"></i> 4 Likes</li>
      <li><i class="fas fa-heart text-red-600 mr-2"></i> 6 Hearts</li>
      <li><i class="fas fa-surprise text-yellow-500 mr-2"></i> 2 Wows</li>
    </ul>
    <button onclick="closeModal('reaction-breakdown-modal')" class="absolute top-3 right-4 text-gray-500 hover:text-gray-900">
      <i class="fas fa-times"></i>
    </button>
  </div>
</div>

<!-- Login Modal -->
<div id="login-modal" class="fixed inset-0 hidden items-center justify-center z-50">
  <div class="modal-backdrop absolute inset-0" onclick="closeModal('login-modal')"></div>
  <div class="bg-white p-6 rounded-md shadow-lg z-10 w-96 max-w-full relative">
    <h3 class="text-xl font-bold mb-4 text-[#000026]">Login Required</h3>
    <p class="text-gray-700 mb-4">Please log in to react to this story or read more details.</p>
    <a href="/login" class="inline-block bg-[#000026] text-white px-6 py-2 rounded hover:bg-[#1a1a4c]">Go to Login</a>
    <button onclick="closeModal('login-modal')" class="absolute top-3 right-4 text-gray-500 hover:text-gray-900">
      <i class="fas fa-times"></i>
    </button>
  </div>
</div>

<script>
  function showLoginModal() {
    document.getElementById('login-modal').classList.remove('hidden');
    document.getElementById('login-modal').classList.add('flex');
  }

  function showBreakdown(id) {
    document.getElementById('reaction-breakdown-modal').classList.remove('hidden');
    document.getElementById('reaction-breakdown-modal').classList.add('flex');
  }

  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  }
</script>

</body>
</html>
