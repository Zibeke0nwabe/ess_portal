    <div class="bg-white rounded-lg max-w-4xl w-full p-6 relative overflow-y-auto max-h-[90vh]">

      <button onclick="closeGalleryModal()" class="absolute top-2 right-4 text-gray-600 hover:text-black text-2xl">&times;</button>
      
